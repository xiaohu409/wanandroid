<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".mvc.controller.BlankFragment4"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:background="@color/colorPrimaryDark">

        <ImageView
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:id="@+id/head_iv_id"
            android:layout_centerHorizontal="true"
            tools:src="@mipmap/app"
            android:layout_marginTop="32dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="昵称"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:id="@+id/username_tv_id"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/head_iv_id"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/username_tv_id"
            android:layout_centerInParent="true"
            android:layout_marginTop="16dp">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/login_btn_id"
                android:text="登录"
                android:layout_marginRight="16dp"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/reg_btn_id"
                android:text="注册"
                android:layout_marginLeft="16dp"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/logout_btn_id"
                android:text="注销"
                android:visibility="gone"
                tools:visibility="visible"/>
        </LinearLayout>

    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/setting_rv_id"/>
</LinearLayout>